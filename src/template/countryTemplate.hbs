<h1 class="country-name">{{name}}</h1>
<div class="country-container">
  <div class="country-box">
    <p class="country-capital"><span>Capital: </span>{{capital}}</p>
    <p class="country-population"><span>Population: </span>{{population}}</p>
    <p class="country-languages"><span>Languages: </span>
      <ul>
        {{#each languages}}
        <li class="language-item">{{this.name}}</li>
        {{/each}}
      </ul>
    </p>
  </div>
  <div class="country-flag"><img src="{{flag}}" alt="flag of {{name}}" class="flag" width="250"></div>
</div>